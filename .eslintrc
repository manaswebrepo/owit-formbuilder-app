{
  "parser": "babel-eslint",
  "env": {
    "es6": true,
    "node": true,
    "browser": true
  },
  "parserOptions": {
    "ecmaVersion": 7,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "experimentalObjectRestSpread": true
    }
  },
  "rules": {
    "indent": [1, 2],
    "quotes": [1, "single"],
    "semi": "error",
    "eqeqeq":2,
    "no-implicit-globals":2,
    "no-mixed-spaces-and-tabs": [2, "smart-tabs"],
    "no-cond-assign": ["error", "always"],
    "no-unused-vars": "warn",
    "no-console": 1
  }
}